# {{{ i3 modifier keys

set $mod Mod4

set $alt Mod1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# }}}

# {{{ i3-gaps

gaps inner 15
gaps outer 5

smart_gaps on
smart_borders on

new_window none
new_float pixel 1

for_window [class="^.*"] border pixel 0

# }}}

